@model IEnumerable<ICareAlz.Models.Pregunta>

@{
    ViewBag.Title = "Index";
}

<h2>Test para detectar AlzHeimer</h2>

<p>
    @Html.ActionLink("Agregar Pregunta", "Create", new {}, new { @class = "btn btn-primary" })
